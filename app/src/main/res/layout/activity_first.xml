<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xyx"


    tools:context="com.example.naymulekramdipto.foodbank.First">
   <LinearLayout
       android:weightSum="4"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:layout_height="65dp">

       <ImageView
           android:id="@+id/image_view_x"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_weight="1"
           android:scaleType="fitXY"
           app:srcCompat="@android:drawable/arrow_down_float" />
       <LinearLayout
           android:layout_weight="3"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="vertical" >
       <TextView
           android:id="@+id/foodid"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:gravity="center_horizontal"
           android:text="burger"
           android:textStyle="bold"
           />
       <TextView
           android:id="@+id/foodid2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:layout_gravity="center"
           android:text="Click here to see the description"
           android:textStyle="bold"/>
         </LinearLayout>
     </LinearLayout>

   </LinearLayout>
